<!doctype html>
<html>
<head>
	<title>Reset Password</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<script type="text/javascript" src="/javascripts/validate_password.js"></script>
	<link rel="stylesheet" href="/stylesheets/styles.css">
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

  {{#if message}}
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      {{message}}
    </div>
  {{/if}}

	<!-- RESET PASSWORD FORM -->
	<form id="myForm" action="/reset/{{token}}" method="post">
		<legend>Reset Password</legend>

		<div class="form-group">
			<label for='email'>New Password</label>
			<input type="password" class="form-control" id="pwd1" name="pwd1" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
		</div>

		<div class="form-group">
			<label for='email'>Confirm Password</label>
			<input type="password" class="form-control" id="pwd2" name="pwd2" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
		</div>

		<button type="submit" class="btn btn-primary"> Update Password</button>
	</form>


</div>

</div>
</body>
</html>
